<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:paddingLeft="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"

                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">
                <ImageView
                    android:id="@+id/iv_productImageCart"
                    android:padding="8dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/fish_katla"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_productName"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_Fullprice"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="ELECTRICAL PUMPS"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_deliveryTimeDate"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_Fullprice"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Select From Available Sizes"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGray"
                    android:textSize="14dp" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size : "
                            android:ellipsize="end"
                            android:singleLine="true"
                            style="@style/txt_12_med_bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/purple_700"
                            android:ellipsize="end"
                            android:singleLine="true"
                            style="@style/txt_12"/>



                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wt : "
                            android:ellipsize="end"
                            android:singleLine="true"
                            style="@style/txt_12_med_bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="40.0gm/pc"
                            android:textColor="@color/purple_700"
                            android:ellipsize="end"
                            android:textSize="@dimen/txt10"
                            android:singleLine="true"
                            style="@style/txt_12"/>



                    </LinearLayout>

                </LinearLayout>


                <LinearLayout

                    android:layout_gravity="start"
                   android:layout_margin="6dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/LL_Quantity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3">


                    <ImageView
                        android:id="@+id/iv_minus_Quantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:src="@drawable/minus"
                        />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginStart="8dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_addQuantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:padding="3dp"
                        android:src="@drawable/plus"
                        />


                </LinearLayout>

              <!--  <TextView
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_Fullprice"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Remove"
                    android:textAlignment="textStart"
                    android:textColor="@color/red"
                    android:textSize="16dp" />-->
            </LinearLayout>



           <LinearLayout
               android:layout_gravity="center"
               android:layout_weight="0.5"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:gravity="center"
                   android:id="@+id/tv_ProductPrice"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:text="₹122"
                   android:textColor="@color/green"
                   android:fontFamily="@font/roboto_medium"
                   />
               <TextView
                   android:gravity="center"
                   android:id="@+id/tv_mrp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:text="₹123"
                   android:fontFamily="@font/roboto_medium"
                   android:textColor="@color/red"
                   />
           </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
