<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.fishmarket.model.ProductPOJO" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    app:cardCornerRadius="@dimen/dp_15">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:loadImage="@{model.image}" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="@dimen/dp_20"
                        android:padding="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/light_gold"
                        android:background="@drawable/circular_rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/location"
                            android:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{model.city+" "+model.state}'
                            style="@style/nrml_txt_blck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_favourite"
                        android:padding="@dimen/dp_10"
                        android:gravity="center"
                        android:background="@drawable/rectangle_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_favourite"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_baseline_heart"
                             />

                        <TextView
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favourite"
                            android:textColor="@color/red"
                            style="@style/nrml_txt_blck" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.productName}"
                    style="@style/txt_20_med_bold" />
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.specifications}"
                    style="@style/nrml_txt" />




                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"₹"+model.salePrice}'
                        android:textSize="@dimen/txt18"
                        android:textColor="@color/green"
                        style="@style/txt_20_med_bold" />

                    <TextView
                        android:id="@+id/tv_mrp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"₹"+model.marketPrice}'
                        android:textSize="@dimen/txt18"
                        android:textColor="@color/red"
                        style="@style/txt_20_med_bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size:"
                        android:textSize="@dimen/txt16"
                        style="@style/nrml_txt" />

                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt16"
                        android:text="@{model.size}"
                        style="@style/nrml_txt_blck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight:"
                        android:textSize="@dimen/txt16"
                        style="@style/nrml_txt" />

                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt16"
                        android:text="@{model.weight}"
                        style="@style/nrml_txt_blck" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt20"
                    android:text="Sold By"
                    style="@style/nrml_txt_blck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:text="@{model.company}"
                    style="@style/txt_20_med_bold" />

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:backgroundTint="@color/purple_700"
                        android:background="@drawable/rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_baseline_call_24"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Now"
                            android:textSize="@dimen/txt18"
                            android:textColor="@color/white"
                            style="@style/txt_20_med_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:backgroundTint="@color/green"
                        android:background="@drawable/rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/whatsapp"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WhatsApp"
                            android:textSize="@dimen/txt18"
                            android:textColor="@color/white"
                            style="@style/txt_20_med_bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>